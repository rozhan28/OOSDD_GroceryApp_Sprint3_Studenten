<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.RegisterView">
    <VerticalStackLayout Padding="20">
        <Button Text="← Terug"
        HorizontalOptions="Start"
        Clicked="OnBackClicked" />

        <Label Text="Registreren" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Name" Text="{Binding Name, Mode=TwoWay}" />
        <Entry Placeholder="Email" Text="{Binding Email, Mode=TwoWay}" />
        <Entry Placeholder="Password" Text="{Binding Password, Mode=TwoWay}" IsPassword="True" />

        <Button Text="Registreer"
        Command="{Binding RegisterCommand}" />
    </VerticalStackLayout>
</ContentPage>
